### APT-powered dget(1) ###

use strict;
use warnings;

BEGIN {
    *CORE::GLOBAL::system = sub {
        my @args = @_;
        if ("@args" =~ m/^command -v curl /) {
            return 1;
        }
        if ("@args" =~ m/^command -v wget /) {
            return 0;
        }
        if (@args == 4 and $args[0] eq 'wget' and $args[1] eq '-O') {
            my (undef, undef, $file, $url) = @_;
            @args = (qw(/usr/lib/apt/apt-helper download-file), $url, $file);
        }
        return CORE::system @args;
    };
}

do '/usr/bin/dget';
if ($@) {
    die $@;
}

