regex=`cat | tr '\n' '|'`
regex="(^| )(${regex%|})(,|$)"
cat /var/lib/apt/lists/*_Sources \
| grep-dctrl -F Binary -e "$regex" -s Package \
| cut -d' ' -f2 \
| sort -u
