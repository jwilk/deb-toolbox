regex=$(sed -e 's/\([.+]\)/\\\1/g' | tr '\n' '|')
regex="(^| )(${regex%|})(,|$)"
grep-aptavail -F Package -e "$regex" -s Package,Source \
| tbl-dctrl -c Source -c Package -d ' ' -H \
| sed -e 's/^ //; s/ .*//' \
| sort -u
