set -e -u
opts=(
    -o Acquire::Changelogs::AlwaysOnline::Origin::Debian=true
    -o Acquire::http::Proxy::metadata.ftp-master.debian.org=DIRECT
)
exec apt changelog "${opts[@]}" "$@"

